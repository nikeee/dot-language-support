{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "master",
		"root": "."
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noConstEnum": "off",
				"noDebugger": "off"
			},
			"correctness": {
				"noVoidTypeReturn": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded"
		}
	},
	"overrides": [
		{
			"includes": ["**/src/scanner.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noAssignInExpressions": "off"
					},
					"style": {
						"noParameterAssign": "off"
					}
				}
			}
		}
	]
}
